#!/usr/bin/perl

use strict;
use warnings;
use v5.10;

# PODNAME: xd
# ABSTRACT: hex dump
# VERSION

=head1 SYNOPSIS

 % xd foo.jpg

=head1 DESCRIPTION

This command is a wee bit like od except that it doesn't have any options and dumps hex and ASCII (printable)
only.

=head1 SEE ALSO

=over 4

=item L<Data::HexDump>

=back

=cut

my $offset = 0;
my $buff;

if(@ARGV > 0)
{
  foreach my $fn (@ARGV)
  {
    open my $fh, '<', $fn;
    do_file($fh);
    close $fh;
  }
}
else
{
  do_file(\*STDIN);
}

sub do_file
{
  my $fh = shift;
  binmode $fh;
  while(my $bytes = read($fh, $buff, 16))
  {  
    if(defined $bytes)
    {
      my $hex = unpack('h*', $buff);
      $hex =~ s/([a-f0-9]{2})/$1 /g;
      my $str = $buff;
      $str =~ s/[^[:graph:] ]/./g;
      printf "%08x %-48s%s\n", $offset, $hex, $str;
      $offset += $bytes;
    }
    else
    {
      die "error reading file: $!";
    }
  }
  close $fh;
}
